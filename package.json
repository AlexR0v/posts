{
  "name": "merng",
  "private": true,
  "license": "MIT",
  "scripts": {
    "lint": "mctl lint",
    "test": "mctl test",
    "commit": "mctl commit",
    "format": "mctl format",
    "typecheck": "mctl typecheck",
    "checkcommit": "mctl precommit",
    "new-version": "lerna version --conventional-commits --yes",
    "server:dev": "yarn workspace @merng/app run dev",
    "server": "yarn workspace @merng/app run start",
    "dev": "yarn workspace @posts/app run dev",
    "start": " lerna run start --scope={@merng/app,@posts/app}"
  },
  "workspaces": [
    "frontend/**/*",
    "backend/**/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "mctl precommit",
      "commit-msg": "mctl commitmsg"
    }
  },
  "devDependencies": {
    "@monstrs/mctl": "^0.1.82",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "typescript": "^4.0.3"
  }
}
